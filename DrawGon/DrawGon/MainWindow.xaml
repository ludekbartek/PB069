<Window x:Class="DrawGon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawGon"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0"></Menu>
        <ToolBar Grid.Row="1">
            <ComboBox Name="ACombo" SelectionChanged="ACombo_SelectionChanged"/>
            <TextBlock>*</TextBlock>
            <ComboBox Name="FunCombo">
                <ComboBoxItem>sin</ComboBoxItem>
                <ComboBoxItem>cos</ComboBoxItem>
            </ComboBox>
            <TextBlock>(</TextBlock>
            <ComboBox Name="BCombo"/>
            <TextBlock>*x)</TextBlock>
        </ToolBar>
    </Grid>
</Window>
